@model HomeIndexViewModel
@{
    ViewData["Title"] = "Active Courses";
}
<h2>@ViewData["Title"]</h2>

<div class="jumbotron home-jumbotron">
    <h3 class="text-center">Welcome to our learning system</h3>
</div>

<br />

<div class="row">
    <form>
        <div class="col-md-4">
            <input asp-for="Search" class="form-control" placeholder="Search..." />
        </div>
    </form>
</div>

<br />

<div class="row">
    @foreach (var course in Model.Courses)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                    </h3>
                </div>
                <div class="panel-body">
                    <img src="https://picsum.photos/300/?random&giud=@(Guid.NewGuid())" class="img-responsive">
                    <br />
                    @course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()
                </div>
            </div>
        </div>
    }
</div>